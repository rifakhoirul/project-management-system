<script>
    let btnPage = document.querySelectorAll(".btn-page")
    btnPage.forEach(element => {
        if (window.location.href.includes("page=")) {
            if (element.textContent.trim() == window.location.href.split("page=").pop()) {
                element.style.background = "rgb(6, 137, 208)";
                element.style.color = "white"
            }
        } else {
            btnPage[0].style.background = "rgb(6, 137, 208)";
            btnPage[0].style.color = "white"
        }
    })
