<% include ../partial/header.ejs %>
<div style="padding-top: 80px; padding-left: 40px;padding-right: 40px;">
    <h1>Users</h1>
    <hr>
    <h3>Filters</h3>
    <div style="padding-left: 100px;padding-right: 100px;">
        <form id="form-filter">
            <div class="containerCheck">
                <label for="idCheckFilter" style="width: 150px;"><input class="form-check-input" type="checkbox"
                        id="idCheckFilter" name="idCheckFilter" value="idCheckFilter" <%=option.idCheckFilter
                        ? "checked" :"" %>> ID</label>
                <input class="form-control" type="number" id="idFilter" name="idFilter" placeholder="ID"
                    value=<%=option.idFilter %>>
            </div>
            <div class="containerCheck">
                <label for="emailCheckFilter" style="width: 150px;"><input class="form-check-input" type="checkbox"
                        id="emailCheckFilter" name="emailCheckFilter" value="emailCheckFilter"
                        <%=option.emailCheckFilter ? "checked" :""%>> Email</label>
                <input class="form-control" type="text" id="emailFilter" name="emailFilter" placeholder="Email"
                    value="<%=option.emailFilter %>">
            </div>
            <div class="containerCheck">
                <label for="firstnameCheckFilter" style="width: 150px;"><input class="form-check-input" type="checkbox"
                        id="firstnameCheckFilter" name="firstnameCheckFilter" value="firstnameCheckFilter"
                        <%=option.firstnameCheckFilter ? "checked" :""%>> First Name</label>
                <input class="form-control" type="text" id="firstnameFilter" name="firstnameFilter" placeholder="First Name"
                    value="<%=option.firstnameFilter %>">
            </div>
            <div class="containerCheck">
                <label for="lastnameCheckFilter" style="width: 150px;"><input class="form-check-input" type="checkbox"
                        id="lastnameCheckFilter" name="lastnameCheckFilter" value="lastnameCheckFilter"
                        <%=option.lastnameCheckFilter ? "checked" :""%>> Last Name</label>
                <input class="form-control" type="text" id="lastnameFilter" name="lastnameFilter" placeholder="Last Name"
                    value="<%=option.lastnameFilter %>">
            </div>
            <div class="containerCheck">
                <label for="positionCheckFilter" style="width: 168px;"><input class="form-check-input" type="checkbox"
                        id="positionCheckFilter" name="positionCheckFilter" value="positionCheckFilter"
                        <%=option.positionCheckFilter ? "checked" :"" %>> Position</label>
                <select class="form-control" id="positionFilter" name="positionFilter">
                    <option value="" disabled selected>Choose the position ...</option>
                        <option value="Manager" <%=option.positionFilter==`Manager`
                            ? "selected" : "" %>>
                            Manager
                        </option>
                        <option value="Software Developer" <%=option.positionFilter==`Software Developer`
                            ? "selected" : "" %>>
                            Software Developer
                        </option>
                        <option value="Quality Assurance" <%=option.positionFilter==`Quality Assurance`
                            ? "selected" : "" %>>
                            Quality Assurance
                        </option>
                </select>
            </div>
            <div class="containerCheck">
                <label for="isfulltimeCheckFilter" style="width: 168px;"><input class="form-check-input" type="checkbox"
                        id="isfulltimeCheckFilter" name="isfulltimeCheckFilter" value="isfulltimeCheckFilter"
                        <%=option.isfulltimeCheckFilter ? "checked" :"" %>> Fulltime</label>
                <select class="form-control" id="isfulltimeFilter" name="isfulltimeFilter">
                    <option value="" disabled selected>Choose ...</option>
                        <option value="true" <%=option.isfulltimeFilter==`true`
                            ? "selected" : "" %>>
                            True
                        </option>
                        <option value="false" <%=option.isfulltimeFilter==`false`
                            ? "selected" : "" %>>
                            False
                        </option>
                </select>
            </div>
            <div class="containerCheck">
                <label for="roleCheckFilter" style="width: 168px;"><input class="form-check-input" type="checkbox"
                        id="roleCheckFilter" name="roleCheckFilter" value="roleCheckFilter"
                        <%=option.roleCheckFilter ? "checked" :"" %>> Role</label>
                <select class="form-control" id="roleFilter" name="roleFilter">
                    <option value="" disabled selected>Choose the position ...</option>
                        <option value="Admin" <%=option.roleFilter==`Admin`
                            ? "selected" : "" %>>
                            Admin
                        </option>
                        <option value="User" <%=option.roleFilter==`User`
                            ? "selected" : "" %>>
                            User
                        </option>
                </select>
            </div>
            
            <p></p>
            <button type="submit" class="btn btn-primary" id="search"><i class="fas fa-search"></i> Search</button>
            <a class="btn btn-secondary" id="resetFilter" href="/users"><i class="fas fa-times"></i> Reset</a>
        </form>
    </div>
    <br>
    <h3>Options</h3>
    <form action="/users/saveoption" method="post">
        <div class="row">
            <div class="col-md-2">
                <p>Columns</p>
            </div>
            <div class="col-md-2">
                <div><input class="form-check-input" type="checkbox" id="idOption" name="idOption"
                        <%=setting.idOption=='on' ? "checked" : "" %> > ID</input></div>
                <div><input class="form-check-input" type="checkbox" id="emailOption" name="emailOption"
                        <%=setting.emailOption=='on' ? "checked" : "" %> > Email</input></div>
            </div>
            <div class="col-md-2">
                <div><input class="form-check-input" type="checkbox" id="firstnameOption" name="firstnameOption"
                        <%=setting.firstnameOption=='on' ? "checked" : "" %>> First Name</input>
                </div>
                <div><input class="form-check-input" type="checkbox" id="lastnameOption" name="lastnameOption"
                        <%=setting.lastnameOption=='on' ? "checked" : "" %>>
                    Last Name</input></div>
            </div>
            <div class="col-md-2">
                <div><input class="form-check-input" type="checkbox" id="positionOption" name="positionOption"
                        <%=setting.positionOption=='on' ? "checked" : "" %>>
                    Position</input></div>
                <div><input class="form-check-input" type="checkbox" id="isfulltimeOption" name="isfulltimeOption"
                        <%=setting.isfulltimeOption=='on' ? "checked" : "" %>>
                    Fulltime</input></div>
            </div>
            <div class="col-md-2">
                <div><input class="form-check-input" type="checkbox" id="roleOption" name="roleOption"
                    <%=setting.roleOption=='on' ? "checked" : "" %>> Role</input>
            </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Apply</button>
    </form>
    <br>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <% if(setting.idOption=='on' ){ %>
                    <th># <a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>id_asc"><i class="fas fa-long-arrow-alt-up" style=<%=sorting=='id_asc' ? 'color:#DC3545':''%>></i></a><a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>id_desc"><i class="fas fa-long-arrow-alt-down" style=<%=sorting=='id_desc' ? 'color:#DC3545':''%>></i></a></th>
                    <% } %>
                    <% if(setting.emailOption=='on' ){ %>
                        <th>Email <a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>email_asc"><i class="fas fa-long-arrow-alt-up" style=<%=sorting=='email_asc' ? 'color:#DC3545':''%>></i></a><a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>email_desc"><i class="fas fa-long-arrow-alt-down" style=<%=sorting=='email_desc' ? 'color:#DC3545':''%>></i></a></th>
                        <% } %>
                        <% if(setting.firstnameOption=='on' ){ %>
                            <th>First Name <a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>firstname_asc"><i class="fas fa-long-arrow-alt-up" style=<%=sorting=='firstname_asc' ? 'color:#DC3545':''%>></i></a><a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>firstname_desc"><i class="fas fa-long-arrow-alt-down" style=<%=sorting=='firstname_desc' ? 'color:#DC3545':''%>></i></a></th>
                            <% } %>
                                <% if(setting.lastnameOption=='on' ){ %>
                                    <th>Last Name <a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>lastname_asc"><i class="fas fa-long-arrow-alt-up" style=<%=sorting=='lastname_asc' ? 'color:#DC3545':''%>></i></a><a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>lastname_desc"><i class="fas fa-long-arrow-alt-down" style=<%=sorting=='lastname_desc' ? 'color:#DC3545':''%>></i></a></th>
                                    <% } %>
                                    <% if(setting.positionOption=='on' ){ %>
                                        <th>Position <a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>position_asc"><i class="fas fa-long-arrow-alt-up" style=<%=sorting=='position_asc' ? 'color:#DC3545':''%>></i></a><a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>position_desc"><i class="fas fa-long-arrow-alt-down" style=<%=sorting=='position_desc' ? 'color:#DC3545':''%>></i></a></th>
                                        <% } %>
                                        <% if(setting.isfulltimeOption=='on' ){ %>
                                            <th>Fulltime <a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>isfulltime_asc"><i class="fas fa-long-arrow-alt-up" style=<%=sorting=='isfulltime_asc' ? 'color:#DC3545':''%>></i></a><a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>isfulltime_desc"><i class="fas fa-long-arrow-alt-down" style=<%=sorting=='isfulltime_desc' ? 'color:#DC3545':''%>></i></a></th>
                                            <% } %>
                                        <% if(setting.roleOption=='on' ){ %>
                                            <th>Role <a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>role_asc"><i class="fas fa-long-arrow-alt-up" style=<%=sorting=='role_asc' ? 'color:#DC3545':''%>></i></a><a href="<%= String(url.split('?')[1]).includes('asc') || String(url.split('?')[1]).includes('desc') ? '?' : url.split('=')[0]=='?idFilter' && (String(url.split('&')[url.split('&').length-2]).includes('desc') || String(url.split('&')[url.split('&').length-2]).includes('asc')) ? urls:url%>role_desc"><i class="fas fa-long-arrow-alt-down" style=<%=sorting=='role_desc' ? 'color:#DC3545':''%>></i></a></th>
                                            <% } %>
                                        <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item, index)=>{ %>
                <tr>
                    <% if(setting.idOption=='on' ){ %>
                        <td>
                            <%=item.userid %>
                            </td>
                        <% } %>
                        <% if(setting.emailOption=='on' ){ %>
                            <td>
                                <%= item.email %>
                            </td>
                            <% } %>
                            <% if(setting.firstnameOption=='on' ){ %>
                                <td>
                                    <%= item.firstname %>
                                </td>
                                <% } %>
                                    <% if(setting.lastnameOption=='on' ){ %>
                                        <td>
                                            <%= item.lastname %>
                                        </td>
                                        <% } %>
                                        <% if(setting.positionOption=='on' ){ %>
                                            <td>
                                                <%= item.position %>
                                            </td>
                                            <% } %>
                                            <% if(setting.isfulltimeOption=='on' ){ %>
                                                <td>
                                                    <%= item.isfulltime %>
                                                </td>
                                                <% } %>
                                            <% if(setting.roleOption=='on' ){ %>
                                                <td>
                                                    <%= item.role %>
                                                </td>
                                                <% } %>
                                                
                                            <% if(setting.idOption=='on' || setting.emailOption=='on' || setting.firstnameOption=='on' || setting.lastnameOption=='on' || setting.positionOption=='on' || setting.isfulltimeOption=='on' || setting.roleOption=='on'){ %>
                                                <td>
                                                    <a class="btn btn-success"
                                                        href="/users/edit/<%= item.userid %>"><i
                                                            class="fas fa-edit"></i> Edit</a>
                                                    <button type="button" class="btn btn-danger deleteButton" data-toggle="modal" deleteid="<%= item.userid %>"
                                                        data-target="#exampleModal"><i class="fas fa-trash"></i>
                                                        Delete</button>
                                                </td>
                                                <% } %>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <div class="pagination">
        <a href="<%=url%><%=bridge%>page=<%= currentPage-1 %>" class=<%=currentPage==1 ? "disabled" :"" %> >Previous</a>
        <% for( let i=1; i <=totalPage; i++ ) { %>
            <a href="<%=url%><%=bridge%>page=<%= i %>" class="btn-page">
                <%= i %>
            </a>
            <% } %>
                <a href="<%=url%><%=bridge%>page=<%= currentPage + 1%>" class=<%=currentPage==totalPage ? "disabled" : "" %>
                    >Next</a>
    </div>
    <br><br>
    <a class="btn btn-primary" href="/users/add"><i class="fas fa-user-plus"></i> Add</a><br><br>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">
                    Delete Confirmation</h5>
                </div>
                <div class="modal-body">
                    Are you sure want to delete this user?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <a type="button" class="btn btn-primary" id="deleteproject">Yes</a>
                </div>
            </div>
        </div>
    </div>
<script>
    $(".deleteButton").click(function () {
    let deleteId = $(this).attr('deleteid')
    $("#deleteproject").attr("href", `/users/delete/${deleteId}`);
});
</script>
<% include ../partial/footer.ejs %>