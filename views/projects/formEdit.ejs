<% include ../partial/header.ejs %>
    <div style="padding-top: 80px;padding-left: 40px;padding-right: 40px;">
        <h1>Edit Project</h1>
        <hr>
        <br>
        <div style="padding-left: 100px;padding-right: 100px;">
            <form action="" method="POST">
                <div class="row mb-3">
                    <label for="projectName" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="projectName" name="projectName"
                            value="<%= projectName ? projectName : "" %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Members</legend>
                    <div class="col-sm-10">
                        <% members.forEach((item, index)=>{ %>
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" name="projectMembers"
                                        id="projectMembers" value="<%= item.firstname %>"
                                        <%=projectMembers.indexOf(item.firstname)>=0 ? "checked" :"" %> >
                                    <%= item.firstname %>
                                </label>
                            </div>
                            <% }) %>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save</button>
                <a class="btn btn-danger" href="/projects"><i class="fas fa-times"></i> Cancel</a>
            </form><br>
        </div>
    </div>
    <% include ../partial/footer.ejs %>